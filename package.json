{
  "type": "module",
  "scripts": {
    "init": "npm i && husky install && playwright install",
    "test:safari:desktop": "playwright test __tests__/desktop/safari.spec.ts -c core/playwright.config.ts",
    "test:safari:desktop:ui": "npm run test:safari:desktop -- --ui",
    "test:safari:mobile": "playwright test __tests__/mobile/safari.spec.ts -c core/playwright.config.ts",
    "test:safari:mobile:ui": "npm run test:safari:mobile -- --ui",
    "test:firefox:desktop": "playwright test __tests__/desktop/firefox.spec.ts -c core/playwright.config.ts",
    "test:firefox:desktop:ui": "npm run test:firefox:desktop -- --ui",
    "test:chrome:desktop": "playwright test __tests__/desktop/chrome.spec.ts -c core/playwright.config.ts",
    "test:chrome:desktop:ui": "npm run test:chrome:desktop -- --ui",
    "test:chrome:mobile": "playwright test __tests__/mobile/chrome.spec.ts -c core/playwright.config.ts",
    "test:chrome:mobile:ui": "npm run test:chrome:mobile -- --ui",
    "test:multiple:desktop": "playwright test __tests__/desktop -c core/playwright.config.ts",
    "test:multiple:desktop:ui": "npm run test:multiple:desktop -- --ui",
    "test:multiple:mobile": "playwright test __tests__/mobile -c core/playwright.config.ts",
    "test:multiple:mobile:ui": "npm run test:multiple:mobile -- --ui",
    "test:all": "playwright test -c core/playwright.config.ts",
    "screenshot:all": "playwright test __tests__/recorders/screenshot.spec.ts -c core/playwright.config.ts",
    "clear:results": "rm -rf test-results",
    "fix:prettier": "prettier . --write",
    "lint:editorconfig": "editorconfig-checker",
    "lint:remark": "remark . --quiet",
    "lint:eslint": "eslint core/*.ts __tests__/**/*.spec.ts --fix",
    "cm": "cz"
  },
  "dependencies": {
    "@playwright/test": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "*",
    "@commitlint/config-conventional": "*",
    "@semantic-release/changelog": "*",
    "@semantic-release/git": "*",
    "@types/mocha": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "conventional-changelog-conventionalcommits": "*",
    "cz-conventional-changelog": "*",
    "editorconfig-checker": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "*",
    "eslint-config-airbnb-typescript": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-unicorn": "*",
    "husky": "*",
    "lint-staged": "*",
    "playwright": "*",
    "prettier": "*",
    "remark-cli": "*",
    "remark-preset-lint-consistent": "*",
    "remark-preset-lint-markdown-style-guide": "*",
    "remark-preset-lint-recommended": "*",
    "semantic-release": "*",
    "typescript": "*"
  }
}
